#!/bin/bash
#PBS -l select=1:ncpus=4:mem=8GB
#PBS -l walltime=120:00:00
#PBS -j oe
#PBS -P 12003580
#PBS -q normal

module load singularity && module load java
cd $PBS_O_WORKDIR

timestamp=$(date +%Y%m%d-%H.%M)

# Run the workflow on the test data, and write the output to output/
nextflow \
    run \
    -resume \
    main.nf \
    --run_mode "subset" \
    --dataset_id_list "cluster-input-dir/manifests/dataset-manifest-longjobs.txt" \
    -c nextflow_cluster.config \
    -with-dag workflow-reports/longjobs/dag-longjob-${timestamp}.html \
    -with-report workflow-reports/longjobs/report-longjob-${timestamp}.html \
    -with-timeline workflow-reports/longjobs/timeline-longjob-${timestamp}.html
